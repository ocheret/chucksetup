#
# Common path configuration
#

# Add personal local stuff
PATH=~/bin:$PATH

# Add /usr/local/bin before /usr/bin
#PATH=/usr/local/bin:$PATH
#PATH=/usr/local/sbin:$PATH

# Brew
#PATH=/opt/homebrew/bin:$PATH

# Initialize conda
if [ -f /opt/anaconda3/etc/profile.d/conda.sh ]
then    source /opt/anaconda3/etc/profile.d/conda.sh
else    PATH="/opt/anaconda3/bin:$PATH"
fi

export PATH
